---
import Fonts from "../components/Fonts.astro";
---

<style>
  body {
    font-family: "Oswald", sans-serif;
    font-optical-sizing: auto;
    font-style: normal;
    font-weight: 400;
    color: white;
  }

  b {
    font-weight: 500;
  }

  a {
    color: cornflowerblue;
    text-decoration: none;
  }

  a:hover {
    text-decoration: underline;
  }

  .oswald {
    font-family: "Oswald", sans-serif;
    font-optical-sizing: auto;
    font-style: normal;
  }

  .calender > * {
    @apply border-gray-50 bg-zinc-700 border-2 flex-1 p-3 m-1 rounded-lg shadow-md shadow-slate-300;

    @media (min-width: 768px) {
      @apply border-gray-50 bg-zinc-700 border-2 flex-[1_0_21%] p-3 m-1;
    }
  }

  .calender h3 {
    @apply text-2xl ml-3;
  }

  .calender p {
    @apply text-xl;

    @media (min-width: 768px) {
      @apply text-lg;
    }
  }

  .paint {
    background-image: url("/splatblu.png");
    background-size: contain;
    background-repeat: no-repeat;
  }
</style>

<script>
  var countDownDate = new Date("Aug 2, 2024 22:00:00").getTime();
  var endDate = new Date("Aug 9, 2024 21:59:59").getTime();

  const coundownFunc = () => {
    var now = new Date().getTime();
    var distance = countDownDate - now;
    var endDistance = endDate - now;

    var days = Math.floor(distance / (1000 * 60 * 60 * 24));
    var hours = Math.floor(
      (distance % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60)
    );
    var minutes = Math.floor((distance % (1000 * 60 * 60)) / (1000 * 60));
    var seconds = Math.floor((distance % (1000 * 60)) / 1000);

    const title = document.getElementById("title");

    if (!title) {
      return;
    }

    title.innerHTML =
      "CAMERON, MAX, AND THEA WILL TAKE PART IN A WEEK LONG BENDER IN " +
      days +
      " DAYS, " +
      hours +
      " HOURS, " +
      minutes +
      " MINUTES, AND " +
      seconds +
      " SECONDS";

    if (endDistance < 0) {
      clearInterval(x);
      title.innerHTML =
        "CAMERON, MAX, AND THEA HAVE COMPLETED A WEEK LONG BENDER";
    } else if (distance < 0) {
      clearInterval(x);
      title.innerHTML = "CAMERON, MAX, AND THEA ARE DOING A WEEK LONG BENDER";
    }
  };

  coundownFunc();

  var x = setInterval(coundownFunc, 1000);
</script>

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/x-icon" href="/favicon.ico?" />
    <meta name="viewport" content="width=device-width" />
    <Fonts />
    <meta name="generator" content={Astro.generator} />
    <title>WEEK LONG BENDER</title>
  </head>
  <body class="bg-stone-900 flex flex-col">
    <div>
      <h1
        id="title"
        class="text-4xl sm:text-6xl m-5 mt-10 sm:m-10 text-center font-meidum underline"
      >
        MAX, CAMERON, AND THEA WILL TAKE PART IN A WEEK LONG BENDER
      </h1>
    </div>
    <div class="paint w-70 mx-auto mb-2">
      <h3 class="text-3xl py-3">THE PLAN (still WIP)</h3>
    </div>
    <div class="flex flex-col flex-wrap md:flex-row p-3 calender">
      <div class="border-t-2">
        <h3>Fri - Aug 2nd</h3>
        <p><b>Opening Ceremony</b> - 9pm @ Thea's</p>
      </div>
      <div>
        <h3>Sat - Aug 3rd</h3>
        <p>
